FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}

convertToMeters 1.0;

length 10;
width  5;
height 3;

vertices
(
    (0     0      0)
    (#calc "$length" 0 0)
    (#calc "$length" #calc "$width" 0)
    (0      #calc "$width" 0)
    (0     0      #calc "$height")
    (#calc "$length" 0      #calc "$height")
    (#calc "$length" #calc "$width" #calc "$height")
    (0      #calc "$width" #calc "$height")
);

blocks
(
    hex (0 1 2 3 4 5 6 7) (10 5 3) simpleGrading (1 1 1)
);

boundary
{
    walls
    {
        type wall;
        faces
        (
            (0 4 7 3)
            (1 2 6 5)
            (0 1 5 4)
            (2 3 7 6)
            (3 0 1 2)
            (4 5 6 7)
        );
    }
}

mergePatchPairs ();
